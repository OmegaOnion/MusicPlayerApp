<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    tools:context="com.example.sam.musicplayer.MainActivity">
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/space" />
    <ListView
        android:id="@+id/lvSongs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/space"
        android:divider="@color/darker"
        android:dividerHeight="1dp"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonShuffle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Shuffle Play"
        android:background="@drawable/shufflebutton"
        android:layout_alignBottom="@+id/space"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
