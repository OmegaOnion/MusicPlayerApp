<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    tools:context="com.example.sam.musicplayer.PlayerActivity">

    <Button
        android:id="@+id/buttonPlay"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"
        android:background="@drawable/pause"
        android:onClick="play"
        tools:layout_editor_absoluteX="233dp"
        tools:layout_editor_absoluteY="369dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title:"
        android:textColor="@color/white"
        android:layout_marginEnd="12dp"
        android:layout_alignBaseline="@+id/textTitle"
        android:layout_alignBottom="@+id/textTitle"
        android:layout_toStartOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="18dp"
        android:text="Artist:" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:minLines="1"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="textTitle"
        android:textColor="@color/white"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textArtist"
        android:minLines="1"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignStart="@+id/textTitle"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_above="@+id/buttonPlay"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/textCurrent"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="text"
            android:textColor="@color/white"
            tools:text="text" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonPlay"
            android:layout_alignEnd="@+id/buttonPlay"
            android:layout_weight="1"
            android:theme="@style/SeekBarColor"
            android:max="1000" />

        <TextView
            android:id="@+id/textDuration"
            android:layout_width="120dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


    </LinearLayout>

    <Button
        android:id="@+id/buttonSkip"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:background="@drawable/nexttrack"
        android:layout_alignBottom="@+id/buttonPlay"
        android:layout_toEndOf="@+id/buttonPlay" />

    <Button
        android:id="@+id/buttonPrevious"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/lasttrack"

        android:layout_alignBottom="@+id/buttonPlay"
        android:layout_toStartOf="@+id/buttonPlay" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/albumicon"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/buttonRepeat"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/repeatgrey"
        android:layout_below="@+id/buttonSkip"
        android:layout_toEndOf="@+id/buttonSkip" />


</RelativeLayout>
